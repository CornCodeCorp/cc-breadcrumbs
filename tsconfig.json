{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "types": [
            "jasmine",
            "node"
        ],
        "lib": ["es2015", "dom"]
    },
    "files": [
        "./lib/index.ts",
        "./lib/src/breadcrumbs/breadcrumbs.component.ts"
    ],
    "exclude": [
        "node_modules",
        "bundles"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}
